<launch>
<!-- Load Map -->
	<arg name="map_file" default="$(find lab5)/map/402_resize.yaml"/>
	<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
		<remap from="map" to="map_raw"/>
	</node>	

<!-- Setting ground coordinate -->
	<node pkg="lab4" name="map_cal" type="map_cal"/>

<!-- Connect to STM -->
	<node pkg="rosserial_python" type="serial_node.py" name="serial_node">
		<param name="port" value="/dev/ttyACM0"/>
	</node>
<!-- A*
	<node pkg="lab5" name="your_node_name" type="your_node_name"/>
-->

<!-- Odometry calculate -->
	<node pkg="lab5" name="tf_pos" type="tf_pos"/>

<!-- Publish velocity command -->
	<node pkg="lab4" name="nav" type="nav"/>

<!-- Rviz -->
	<node pkg="rviz" name="rviz" type="rviz"/>

</launch>
